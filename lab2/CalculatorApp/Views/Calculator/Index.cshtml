@model CalculatorApp.Models.CalculatorModel

<h2>Simple Calculator</h2>

<form asp-action="Index" method="post">
    <div>
        <label for="Number1">First Number:</label>
        <input type="number" name="Number1" value="@(Model != null ? Model.Number1 : "")" step="any" />
    </div>
    <div>
        <label for="Number2">Second Number:</label>
        <input type="number" name="Number2" value="@(Model != null ? Model.Number2 : "")" step="any" />
    </div>
    <div>
        <button type="submit">Dodaj</button>
    </div>
</form>

@if (Model != null)
{
    <div>
        <h3>Result: @Model.Result</h3>
    </div>
}