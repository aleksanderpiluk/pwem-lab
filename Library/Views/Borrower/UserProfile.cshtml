@model UserModel;
@{
	ViewData["Title"] = "User profile";
	if (Model != null)
	{
		ViewData["id"] = Model.id;
		ViewData["FirstName"] = Model.FirstName;
		ViewData["LastName"] = Model.LastName;
		ViewData["Address"] = Model.Address;
		ViewData["Email"] = Model.Email;
	}
}

<div class="panel-header">
</div>


<div class="content">
	<div class="row">
		<div class="col-md-8">
			<div class="card">
				<div class="card-header">
					<h5 class="title">Edit Profile</h5>
				</div>
				<div class="card-body">
					<form method="post" action="/Borrower/UpdateUserProfile">
						<div class="row">
							<div class="col-md-6 pr-1">
								<div class="form-group">
									<label>First Name</label>
									<input type="text" required class="form-control" placeholder="FirstName"
										asp-for="FirstName" value="@ViewData["FirstName"]">
								</div>
							</div>
							<div class="col-md-6 pl-1">
								<div class="form-group">
									<label>Last Name</label>
									<input type="text" required class="form-control" placeholder="Last Name"
										asp-for="LastName" value="@ViewData["LastName"]">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-4 pl-1">
								<div class="form-group">
									<label for="exampleInputEmail1">Email address</label>
									<input type="email" required class="form-control" placeholder="Email"
										asp-for="Email" value="@ViewData["Email"]">
								</div>
							</div>
							<div class="col-md-8">
								<div class="form-group">
									<label>Full Address</label>
									<input type="text" required class="form-control" placeholder="Home Address"
										asp-for="Address" value="@ViewData["Address"]">
								</div>
							</div>
						</div>

						<button class="btn btn-neutral btn-icon btn-round btn-lg">Send</button>
					</form>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card card-user">
				<div class="image">
					<img src="https://i.pinimg.com/originals/19/9d/da/199dda88fbca22eae7b3c5f3c022e16b.jpg" alt="...">
				</div>
				<div class="card-body">
					<div class="author">
						<img class="avatar border-gray"
							src="https://cdn.britannica.com/70/234870-050-D4D024BB/Orange-colored-cat-yawns-displaying-teeth.jpg"
							alt="...">
						<h5 class="title">@ViewData["FirstName"] @ViewData["LastName"]</h5>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
